<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Teksti"
        android:id="@+id/editText"/>

    <TextView
        android:id="@+id/textWiev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
         />

    <Button
        android:id="@+id/englishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENGLISH"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <Button
        android:id="@+id/sverigeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SVERIGE"
        app:layout_constraintLeft_toRightOf="@id/englishButton"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <Button
        android:id="@+id/suomiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUOMEKSI"
        app:layout_constraintTop_toBottomOf="@id/englishButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="70dp"
        />

    <Button
        android:id="@+id/surpriseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SURPRISE"
        app:layout_constraintLeft_toRightOf="@id/suomiButton"
        app:layout_constraintStart_toEndOf="@+id/suomiButton"
        app:layout_constraintTop_toBottomOf="@id/sverigeButton" />


</androidx.constraintlayout.widget.ConstraintLayout>